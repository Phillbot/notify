{
  "name": "notify",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "version": "1.0.0",
  "scripts": {
    "web:dev": "pnpm --filter notify-web-client dev",
    "web:build": "pnpm --filter notify-web-client build",
    "web:lint": "pnpm --filter notify-web-client lint:styles",
    "web:clean": "pnpm --filter notify-web-client run clean:types",
    "mobile:dev": "pnpm --filter notify-mobile-client start",
    "mobile:android": "pnpm --filter notify-mobile-client android",
    "mobile:ios": "pnpm --filter notify-mobile-client ios",
    "mobile:clean": "pnpm --filter notify-mobile-client clean",
    "clean:deep": "find . -type d -name 'node_modules' -prune -exec rm -rf '{}' + && find . -name 'pnpm-lock.yaml' -delete"
  },
  "devDependencies": {
    "@types/node": "22.13.11",
    "eslint": "8.57.0",
    "typescript": "5.8.2",
    "typed-scss-modules": "8.1.1",
    "babel-plugin-transform-typescript-metadata": "0.3.2",
    "vite": "5.0.0",
    "@babel/core": "7.26.10",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-decorators": "7.25.9",
    "@babel/plugin-transform-typescript": "7.27.0",
    "@babel/preset-react": "7.26.3",
    "@babel/preset-typescript": "7.27.0",
    "@types/stylelint": "14.0.0",
    "sass": "1.86.0",
    "concurrently": "9.1.2",
    "stylelint": "16.16.0",
    "stylelint-config-standard-scss": "14.0.0",
    "stylelint-scss": "6.11.1",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-import-resolver-typescript": "4.3.1"
  }
}
