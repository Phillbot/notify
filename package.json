{
  "name": "notify",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "version": "0.0.1",
  "scripts": {
    "web:dev": "pnpm --filter notify-web-client dev",
    "web:build": "pnpm --filter notify-web-client build",
    "web:lint": "pnpm --filter notify-web-client lint:styles",
    "web:clean": "pnpm --filter notify-web-client run clean:types",
    "mobile:dev": "pnpm --filter notify-mobile-client start",
    "mobile:android": "pnpm --filter notify-mobile-client android",
    "mobile:ios": "pnpm --filter notify-mobile-client ios",
    "mobile:clean": "pnpm --filter notify-mobile-client clean",
    "mobile:build:android": "pnpm --filter notify-mobile-client exec eas build --platform android",
    "mobile:build:ios": "pnpm --filter notify-mobile-client exec eas build --platform ios",
    "mobile:build:web": "pnpm --filter notify-mobile-client exec expo export:web",
    "mobile:run:android": "pnpm --filter notify-mobile-client exec expo run:android",
    "mobile:run:ios": "pnpm --filter notify-mobile-client exec expo run:ios",
    "desktop:dev": "pnpm --filter notify-desktop-client start",
    "desktop:build:mac": "pnpm --filter notify-desktop-client run build:mac",
    "desktop:build:win": "pnpm --filter notify-desktop-client run build:win",
    "desktop:build:linux": "pnpm --filter notify-desktop-client run build:linux",
    "install:all": "pnpm install && cd apps/desktop && node node_modules/electron/install.js",
    "clean:all": "pnpm run clean:deep && pnpm run clean:builds",
    "clean:deep": "find . -type d -name 'node_modules' -prune -exec rm -rf '{}' + && find . -name 'pnpm-lock.yaml' -delete",
    "clean:builds": "find . -type d \\( -name 'dist' -o -name 'release' -o -name 'public' \\) -prune -exec rm -rf '{}' +"
  },
  "devDependencies": {
    "@types/node": "22.13.11",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "concurrently": "9.1.2",
    "eslint": "8.57.0",
    "eslint-import-resolver-typescript": "4.3.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.2.0",
    "typescript": "5.8.2",
    "vite": "5.0.0"
  }
}
